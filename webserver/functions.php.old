/* ==  AJAX  ==============================*/

function dt_init() {
 	global $wp_query;

 	// Add code to index pages.
 	if( !is_singular() ) {

 		// What page are we on? And what is the pages limit?
 		$max = $wp_query->max_num_pages;
 		$paged = ( get_query_var('paged') > 1 ) ? get_query_var('paged') : 1;

 		// Add some parameters for the JS.
 		wp_localize_script(
 			'dt_custom',
 			'dt',
 			array(
 				'startPage' => $paged,
 				'maxPages' => $max,
 				'nextLink' => next_posts($max, false)
 			)
 		);
 	}
 }
 add_action('template_redirect', 'dt_init');


/* ==  Overlay Icon  ==============================*/

function dt_overlay_icon($featured = '') {

	$format = get_post_format();
	
	if($featured != '')
		$featured = '-featured';

	$has_format = false;
	$link = '#';
	$thumbnail_id = get_post_thumbnail_id(get_the_ID());
	$thumb_src = wp_get_attachment_image_src( $thumbnail_id, array( '9999','9999' ), false, '' );
	$thumb_src = $thumb_src[0];

	if($format == 'image') {

		$link = wp_get_attachment_image_src( $thumbnail_id, array( '9999','9999' ), false, '' );
		$link = $link[0];

		$has_format = true;

	} elseif($format == 'gallery') {

		$link = $thumb_src;
	    $has_format = true;

	} elseif($format == 'video') {

		global $wp_embed;
		$video_url = htmlspecialchars(get_post_meta(get_the_ID(), 'dt_video', true));
		$video_embed = $wp_embed->run_shortcode('[embed]'.$video_url.'[/embed]');

		$link = '#video-'.get_the_ID();

		$has_format = true;
	}

	if($has_format) : ?>

		<span class="overlay-icon overlay-<?php echo $format; ?>"><a data-gallery="group-<?php the_ID(); echo $featured; ?>" class="colorbox-<?php echo $format; ?>" href="<?php echo $link; ?>"></a></span>
	<?php

		if($format == 'video'):
	?>

		<div class="dt-video-embed">
			<div id="video-<?php the_ID(); echo $featured; ?>"><?php echo $video_embed; ?></div>
		</div>

	<?php

		endif;

		if($format == 'gallery') {

			$args = array(
				'orderby'		 => 'menu_order',
				'post_type'      => 'attachment',
				'post_parent'    => get_the_ID(),
				'post_mime_type' => 'image',
				'post_status'    => null,
				'posts_per_page'    => -1,
			);

			$attachments = get_posts($args);

		    if ($attachments) :

		    	foreach ($attachments as $attachment) :

					$link = wp_get_attachment_image_src( $attachment->ID, array( '9999','9999' ), false, '' );
					$link = $link[0];

					if($thumb_src != $link) :
					?>

						<a class="colorbox-<?php echo $format; ?> hidden" data-gallery="group-<?php the_ID(); echo $featured; ?>" href="<?php echo $link; ?>"></a>

		    		<?php
		    		endif;

		    	endforeach;

		    endif;

		}

	endif;

}

